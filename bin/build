#!/bin/bash
#
#
set -e

readonly IMAGE_NAME="pet-store"
readonly IMAGE_TAG="$(cat VERSION)"

docker run --rm \
  -v "$(pwd)":/app \
  maven:3.5.3-jdk-8-alpine \
  bash -c "cd /app; mvn package"

docker build \
  -t "${IMAGE_NAME}:${IMAGE_TAG}" \
  .

docker tag $IMAGE_NAME:$IMAGE_TAG $IMAGE_NAME:latest
